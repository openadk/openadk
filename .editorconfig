# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Windows scripts
[*.ps1]
end_of_line = crlf
indent_size = 4

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Go files
[*.go]
indent_style = tab

# Rust files
[*.rs]
indent_size = 4

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_size = 4

# Java files
[*.java]
indent_size = 4

# XML files
[*.{xml,csproj,vbproj,vcxproj,props,targets}]
indent_size = 2

# .NET files
[*.{cs,vb}]
indent_size = 4